<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/gesture_paper"
            android:id="@+id/paper_scissor_stone_image"
            android:layout_gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout5"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/linearLayout5" android:layout_marginBottom="40dp">
        <Button
                android:text="Paper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/paper_scissor_stone_btn_paper"
                android:layout_weight="1" android:textAllCaps="false" android:textSize="20sp"/>
        <Button
                android:text="Scissor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/paper_scissor_stone_btn_scissor"
                android:layout_weight="1" android:textAllCaps="false" android:textSize="20sp"/>
        <Button
                android:text="Stone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/paper_scissor_stone_btn_stone"
                android:layout_weight="1" android:textAllCaps="false" android:textSize="20sp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>