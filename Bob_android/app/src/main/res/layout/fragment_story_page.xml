<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/object_root">

    <TextView
            android:id="@+id/story_page_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="35sp"
            app:layout_constraintTop_toBottomOf="@id/story_page_imageview"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"/>

    <ImageView
            android:id="@+id/story_page_imageview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/face_smile"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/story_page_text"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="36dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/linearLayout2">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <Button
                    android:text="previous"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/story_page_previous"
                    android:layout_weight="1"/>
            <Button
                    android:text="Speak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/story_page_speak" android:layout_weight="1"/>
            <Button
                    android:text="Next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/story_page_next" android:layout_weight="1"/>
        </LinearLayout>
        <Button
                android:text="Next session"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/story_page_next_session"
                android:layout_weight="1"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>