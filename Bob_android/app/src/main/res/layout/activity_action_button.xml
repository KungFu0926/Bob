<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/main_root"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".activity.ObjectDetectActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/action_button_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/main_area"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/action_button_toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">


        <LinearLayout
                android:id="@+id/action_button_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/action_button_face"
                android:orientation="vertical" android:layout_marginBottom="50dp" android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp">
            <Button
                    android:text="correct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/action_button_correct"
                    android:onClick="action" android:textSize="24sp" android:textAllCaps="false"/>

            <Button
                    android:text="Incorrect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/action_button_incorrect"
                    android:onClick="action" android:textSize="24sp" android:textAllCaps="false"/>


        </LinearLayout>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp" app:srcCompat="@drawable/face_default" android:id="@+id/action_button_face"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/action_button_frame"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>