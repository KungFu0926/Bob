<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:id="@+id/object_root">

    <ImageView
            android:id="@+id/vocabulary_interactive_imageview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/face_smile"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/vocabulary_interactive_score"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/linearLayout" android:layout_marginBottom="50dp"
            app:layout_constraintTop_toBottomOf="@+id/vocabulary_interactive_imageview" android:layout_marginTop="40dp">
        <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/vocabulary_interactive_answer_1"
                android:layout_weight="1"
                android:onClick="answer"/>
        <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/vocabulary_interactive_answer_2"
                android:layout_weight="1"
                android:onClick="answer"/>
        <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/vocabulary_interactive_answer_3"
                android:layout_weight="1"
                android:onClick="answer"/>
        <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/vocabulary_interactive_answer_4"
                android:layout_weight="1"
                android:onClick="answer"/>
    </LinearLayout>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/vocabulary_interactive_score"
            android:textSize="48sp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="20dp"
            android:layout_marginStart="20dp" app:layout_constraintBottom_toTopOf="@+id/vocabulary_interactive_imageview"
            android:layout_marginBottom="10dp"/>
</android.support.constraint.ConstraintLayout>